<Window x:Class="Tricycle.UI.Windows.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="130"
        Width="480"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <Label x:Name="lblMessage" Padding="0">Please enter a value:</Label>
        <TextBox x:Name="txtValue" Margin="0, 10" TextChanged="txtValue_TextChanged" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnOK" Margin="10, 0" Width="50" Click="btnOK_Click">OK</Button>
            <Button x:Name="btnCancel" Width="50" Click="btnCancel_Click">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
