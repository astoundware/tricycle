<Application x:Class="Tricycle.UI.Windows.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:Tricycle.UI.Windows"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <sys:Double x:Key="MessageFontSize">16</sys:Double>
        <sys:Double x:Key="InputFontSize">16</sys:Double>
        <sys:Double x:Key="ButtonFontSize">16</sys:Double>
        <sys:Double x:Key="ButtonWidth">75</sys:Double>
        <sys:Double x:Key="IconSize">48</sys:Double>
        <Thickness x:Key="DialogPadding">15, 10</Thickness>
    </Application.Resources>
</Application>
